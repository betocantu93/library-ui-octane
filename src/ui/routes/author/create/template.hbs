<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "author" class="btn-back"}}
      <span class="sr-only">Back</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>New Author</h3>
      </div>
    </div>

    <div class="slide-out-content">
      <form>


        <div class="field">
          <label>First Name: {{this.first}}</label>
          <input type="text" value={{this.first}} placeholder="First Name" oninput={{action this.changeFirst value="target.value"}}>
        </div>

        <div class="field">
          <label>Last Name: {{this.last}}</label>
          <input value={{this.last}} type="text" placeholder="Last Name" oninput={{action (mut this.last) value="target.value"}}>
        </div>

        <div class="field">
          <label>Last Name: {{this.last}}</label>
          {{input type="text" placeholder="Last Name" value=this.last }}
        </div>

      </form>
    </div>

  </div>
</div>